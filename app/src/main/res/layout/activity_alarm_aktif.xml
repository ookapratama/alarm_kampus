<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmAktif"
    android:orientation="vertical"
    android:background="#121212">

    <TextView
        android:id="@+id/matkul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Konsentrasi"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="#9DD7EE"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07.30"
        android:textColor="@color/white"
        android:textSize="54dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/namaDosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosen : Ardimansyah"
        android:textSize="14dp"
        android:textColor="#9DD7EE"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/kodeMatkul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6TAPK-C"
        android:textSize="24dp"
        android:textColor="#9DD7EE"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        />


        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usap keatas untuk menghentikan"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_gravity="center"
            />


</LinearLayout>