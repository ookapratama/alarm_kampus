            android:textColor="#9DD7EE"
            android:layout_marginTop="10dp"
            />

        <Switch
            android:id="@+id/toggle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_centerVertical="true"
            />



    </RelativeLayout>

</LinearLayout>